<!DOCTYPE html>
<html lang="en">
  <head>
    <p id="notice"><%= notice %></p>
    <h2>List Parcels</h2>
    <br />
    <h2><%= link_to 'New Parcel', new_parcel_path %></h2>
    <br /><br />

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="container">
      <table class="table" border="1px solid black">
      <thead>
        <tr>
          <th>Weight</th>
          <th>Status</th>
          <th>Service Type</th>
          <th>Payment Mode</th>
          <th>Sender</th>
          <th>Receiver</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @parcels.each do |parcel| %>
          <tr>
            <td><%= parcel.weight %></td>
            <td><%= parcel.status %></td>
            <td><%= parcel.service_type.name %></td>
            <td><%= parcel.payment_mode %></td>
            <td><%= parcel.sender.name %></td>
            <td><%= parcel.receiver.name %></td>
            <td><%= link_to 'Show', parcel %></td>
            <td><%= link_to 'Edit', edit_parcel_path(parcel) %></td>
            <td><%= link_to 'Destroy', parcel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </body>
</html>


